{
  "swagger": "2.0",
  "info": {
    "title": "D&D Character Tracker API",
    "description": "API for managing characters and initiative tracking in a D&D game",
    "version": "1.0"
  },
  "basePath": "/",
  "paths": {
    "/": {
      "get": {
        "summary": "Home",
        "description": "Default endpoint",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/new-encounter": {
      "get": {
        "summary": "Reset Initiative",
        "description": "Reset initiative for a new encounter",
        "responses": {
          "200": {
            "description": "Initiative Reset Successful",
            "schema": {
              "type": "string",
              "example": "Message: Initiative Reset"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Internal Server Error: <error_message>"
                }
              }
            }
          }
        }
      }
    },
    "/next-combatant": {
      "get": {
        "summary": "Get Next Combatant",
        "description": "Retrieve the next combatant based on current initiative",
        "responses": {
          "200": {
            "description": "Next Combatant Retrieved Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "ID": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "AC": {
                  "type": "integer"
                },
                "class": {
                  "type": "string"
                },
                "Initiative": {
                  "type": "integer"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Internal Server Error: <error_message>"
                }
              }
            }
          }
        }
      }
    },
    "/character": {
      "post": {
        "summary": "Update Characters",
        "description": "Update or insert a character's information",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "character",
            "description": "Character information to be updated or inserted",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "ac": {
                  "type": "integer"
                },
                "class": {
                  "type": "string"
                },
                "initiative": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Character Updated or Inserted Successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Character updated successfully"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Missing required field: <field_name>"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Invalid data types"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Internal Server Error: <error_message>"
                }
              }
            }
          }
        }
      },
      "get": {
        "description": "",
        "parameters": [
          {
            "in": "body",
            "name": "character",
            "description": "Character id",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Missing id field"
          },
          "422": {
            "description": "UNable to load character data"
          },
          "500":{
            "description": "Unable to retrieve character from DB"
          }
        }
      }
    }
  }
}
